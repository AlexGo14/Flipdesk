
<!-- Split button -->
div(class="btn-group")
	button(type="button" class="btn btn-success") Open
	button(type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown")
		span(class="caret")
		span(class="sr-only") Toggle Dropdown
		
	ul(class="dropdown-menu" role="menu")
		li
			a(href="#") Open
		li
			a(href="#" onclick="showAssignAgentModal()") Assigned
		li
			a(href="#") In progress
		li
			a(href="#") Waiting
		li
			a(href="#") Solved
		li(class="divider")
		li
			a(href="#") Archive
	
button(class="btn btn-primary" style="margin-left: 10px;" onclick="ticket_create_comment(#{id})") Write a comment
	
<br><br>
strong #{caption} - #{create_timestamp}
form(class="form" role="form" id="send_ticket_form")
	div(class="form-group")
		textarea(class="form-control" placeholder="#{description}" disabled)
span(id="ticket-id" style="visibility: hidden;") #{id}
<br><br><br>

if comments.length > 0
	h2 Comments
	
	for loop_comment in comments
		span Written by #{loop_comment.agent.name] on #{loop_comment.create_timestamp}
		<br><br>
		blockquote(id="comment_id_" + loop_comment.id)
			p=loop_comment.description
		<br><br>

<!-- Modal -->
div(class="modal fade" id="createCommentModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
	div(class="modal-dialog")
		div(class="modal-content")
			div(class="modal-header")
				button(type="button" class="close" data-dismiss="modal")
					span(aria-hidden="true") &times;
					span(class="sr-only") Close
				h4(class="modal-title" id="myModalLabel") Create Ticket
			div(class="modal-body")
				form(class="form" role="form" id="send_ticket_form")
					div(class="form-group")
						textarea(class="form-control" rows="5" placeholder="Comment" id="create_comment_form_description")
			div(class="modal-footer")
				button(type="button" class="btn btn-default btn-lg" data-dismiss="modal") Close
				button(type="button" class="btn btn-primary btn-lg" onclick="comment_send()") Send
	
		
div(class="modal fade" id="assignAgentModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
	div(class="modal-dialog")
		div(class="modal-content")
			div(class="modal-header")
				button(type="button" class="close" data-dismiss="modal")
					span(aria-hidden="true") &times;
					span(class="sr-only") Close
				h4(class="modal-title" id="myModalLabel") Assign agent
			div(class="modal-body")
				form(class="form" role="form" id="send_ticket_form")
					div(class="form-group")
						select(class="form-control")
							for agent in agents
								option(id="agent.id")=agent.first_name + agent.last_name
			div(class="modal-footer")
				button(type="button" class="btn btn-default btn-lg" data-dismiss="modal") Close
				button(type="button" class="btn btn-primary btn-lg" onclick="assign_agent_to_ticket()") Send
			
