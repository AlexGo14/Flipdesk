extends layout

block content
	nav(class="navbar navbar-default" role="navigation")
		div(class="container-fluid")
			div(class="navbar-header")
				a(class="navbar-brand" href="/tickets") #{company}
			div(class="collapse navbar-collapse" id="bs-example-navbar-collapse-1")
				ul(class="nav navbar-nav")
					li(class="dropdown")
						a(class="dropdown-toggle" data-toggle="dropdown") Customers
							span(class="caret")
						ul(class="dropdown-menu" role="menu")
							for loop_customer in customers							
								li
									a(href="/tickets/customer/" + loop_customer.id)=loop_customer.name
					li
						a(href="/administration") Administration
	div(class="row")
		div(class="col-sm-3 col-md-3 col-lg-3")
			ul(class="nav nav-pills nav-stacked")
				li(class="active")
					a(href="/administration") Settings
				li
					a(href="/administration/agents") Agents
				li(class="dropdown")
					a(class="dropdown-toggle" data-toggle="dropdown" href="#")
						| Customers
						span(class="caret")
					ul(class="dropdown-menu" role="menu")
						for loop_customer in customers
							li
								a(href="/administration/customer/" + loop_customer.id)=loop_customer.name
				li
					a(href="/statistics") Statistic
				
							
		div(class="col-sm-9 col-md-9 col-lg-9")
