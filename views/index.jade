extends layout

block content
	div(class="container-fluid" id="landing_content")
		div(class="row")
			h1=title
			p.
				Welcome to #{title}<br>
				We would like to offer you a unique and excellent support service.<br>
				Please log in to manage your tickets
			button(class="btn" onclick="login_form()") Login
	
	div(class="modal fade" id="modalDiv" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
		div(class="modal-dialog")
			div(class="modal-content")
				div(class="modal-header")
					button(type="button" class="close" data-dismiss="modal")
						span(aria-hidden="true") &times;
						span(class="sr-only") Close
					h4(class="modal-title" id="myModalLabel") Login
				div(class="modal-body")
					label Please log in with your account data.
					div
						span(id="error_message_form")
					form(class="form" role="form" id="login_form")
						div(class="form-group")
							label E-Mail
							input(type="email" id="email_login" name="email" class="form-control" placeholder="E-Mail")
							<br><br>
							label Passwort:
							input(type="password" id="password_login" name="password" class="form-control" placeholder="Passwort")
							<br>
							button(type="button" class="btn btn-primary btn-lg" onclick="login()") Login
							
						
				div(class="modal-footer")
					a(class="btn" href="/password-reset") Forgot my password
	script(src='/javascripts/functions.js')
